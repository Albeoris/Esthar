<UserControl x:Class="Esthar.UI.SelectDirectoryControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="clr-namespace:Esthar.UI"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance ui:SelectDirectoryControl}">
    
    <GroupBox Header="{Binding Header}">
        <Grid>
            <TextBox Text="{Binding Path}" IsReadOnly="False" HorizontalAlignment="Stretch" Margin="5,5,34,5"/>
            <Button Content="..." Click="OnButtonClick" HorizontalAlignment="Right" Width="24" Margin="5"/>
        </Grid>
    </GroupBox>
    
</UserControl>