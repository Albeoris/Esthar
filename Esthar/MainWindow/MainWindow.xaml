<Window x:Class="Esthar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:esthar="clr-namespace:Esthar"
        Title="MainWindow" WindowState="Maximized" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <esthar:MainMenu Grid.Row="0"/>
        <esthar:MainTabs x:Name="MainTabs" Grid.Row="1"/>
        <!--<esthar:MainTree Grid.Row="1" Grid.Column="0"/>-->
        <!--<GridSplitter Grid.Row="1" Grid.Column="1" Width="3" HorizontalAlignment="Left"/>-->
        <StatusBar Grid.Row="2">
            <StackPanel x:Name="BottomPanel" Orientation="Horizontal"/>
        </StatusBar>
    </Grid>
</Window>
