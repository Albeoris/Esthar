<UserControl x:Class="Esthar.LocationControlTextTabEdit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit">
    <GroupBox Header="Редактор">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
                <RowDefinition Height="150"/>
            </Grid.RowDefinitions>
            <avalonedit:TextEditor x:Name="TextEditorInstance" Margin="3" Grid.Row="1"/>
            <GridSplitter Grid.Row="2" Height="3" VerticalAlignment="Top" HorizontalAlignment="Stretch" ResizeDirection="Rows"/>
            <TextBox x:Name="TextBoxInstance" Margin="3" Background="LightGray" Grid.Row="2" AcceptsReturn="True" IsReadOnly="True"/>
        </Grid>
    </GroupBox>
</UserControl>
