<TabItem x:Class="Esthar.LocationControlTextTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:esthar="clr-namespace:Esthar"
             Header="Текст">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <esthar:LocationControlTextTabList DataContext="{Binding}" x:Name="_list" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        <esthar:LocationControlTextTabEdit DataContext="{Binding SelectedMonologue, ElementName=_list, Mode=OneWay}" x:Name="_edit" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        <esthar:LocationControlTextTabPreview DataContext="{Binding}" x:Name="_preview" Grid.Column="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
    </Grid>
</TabItem>
